            android:layout_width="88dp"
            android:layout_height="50dp"/>

        <RadioButton
            android:background="@drawable/custom_radio_selector"
            android:button="@color/transparent"
            android:textAlignment="center"
            android:text="Vie 13"
            android:layout_marginEnd="8dp"
            android:layout_width="88dp"
            android:layout_height="50dp"/>


        <RadioButton
            android:background="@drawable/custom_radio_selector"
            android:button="@color/transparent"
            android:textAlignment="center"
            android:text="Sáb 14"
