        <RadioButton
            android:background="@drawable/custom_radio_selector"
            android:button="@color/transparent"
            android:textAlignment="center"
            android:text="Mié 11"
            android:layout_marginEnd="8dp"
            android:layout_width="88dp"
            android:layout_height="50dp"/>

        <RadioButton
            android:background="@drawable/custom_radio_selector"
            android:button="@color/transparent"
            android:textAlignment="center"
            android:text="Jue 12"
