<?xml version="1.0" encoding="utf-8"?>
    <!-- RadioGroup para manejar selección única -->
    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/radioGroupDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <!-- RadioButtons para las fechas -->
    <RadioButton
        android:id="@+id/radioButtonDate1"
        android:background="@drawable/custom_radio_selector"
        android:button="@color/transparent"
        android:textAlignment="center"
        android:layout_width="88dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"/>

    <RadioButton
        android:id="@+id/radioButtonDate2"
        android:background="@drawable/custom_radio_selector"
        android:button="@color/transparent"
        android:textAlignment="center"
        android:layout_width="88dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"/>

    <RadioButton
        android:id="@+id/radioButtonDate3"
        android:background="@drawable/custom_radio_selector"
        android:button="@color/transparent"
        android:textAlignment="center"
        android:layout_width="88dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"/>

    <RadioButton
        android:id="@+id/radioButtonDate4"
        android:background="@drawable/custom_radio_selector"
        android:button="@color/transparent"
        android:textAlignment="center"
        android:layout_width="88dp"
        android:layout_height="50dp"/>


</RadioGroup>


